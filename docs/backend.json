{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "User's unique ID (from Firebase Auth)." },
        "email": { "type": "string", "format": "email", "description": "User's email address." }
      },
      "required": ["id", "email"]
    },
    "Trip": {
      "title": "Trip",
      "description": "Represents a saved travel itinerary.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "ID of the user who owns this trip." },
        "destination": { "type": "string", "description": "The destination of the trip." },
        "trip_summary": { "type": "string", "description": "A summary of the trip." },
        "total_days": { "type": "number", "description": "The total number of days for the trip." },
        "itinerary": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "day": { "type": "number" },
              "title": { "type": "string" },
              "morning": { "type": "string" },
              "afternoon": { "type": "string" },
              "evening": { "type": "string" },
              "commute": { "type": "string" },
              "food": { "type": "string" },
              "notes": { "type": "string" }
            },
            "required": ["day", "title", "morning", "afternoon", "evening", "commute", "food", "notes"]
          }
        },
        "tips": { "type": "string", "description": "Travel tips for the destination." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp when the trip was saved." }
      },
      "required": ["userId", "destination", "trip_summary", "total_days", "itinerary", "tips", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores basic user profile information, linked to their Firebase Auth UID."
    },
    "/users/{userId}/trips/{tripId}": {
      "schema": { "$ref": "#/entities/Trip" },
      "description": "Stores the saved travel itineraries for a specific user. The 'tripId' is auto-generated by Firestore."
    }
  }
}
